<Window x:Class="FileConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileConverter"
        mc:Ignorable="d"
        Title="File Converter" Height="300" Width="400"
        Background="LightGray"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="*"/>
            <ColumnDefinition Width ="*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Datei(en) suchen" 
                HorizontalContentAlignment="Center"
                Background="White" 
                Command="{Binding BrowseCommand}"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="100" 
                Margin="50,226,0,0" 
                Height="30" 
                RenderTransformOrigin="0.458,0.422"/>
        <!--Dieses Label muss den "Zielformatcontrols" gemalt werden-->
        <Label Content="{Binding InfoText}"
               Visibility="{Binding InfoTextVisibility}"
               HorizontalContentAlignment="Center" 
               Grid.Column="1" 
               HorizontalAlignment="Left" 
               Height="25" 
               Margin="28,106,0,0" 
               VerticalAlignment="Top" 
               Width="152"/>
        <ComboBox ItemsSource="{Binding Formats}"
                  SelectedItem="{Binding Formats.Current, Mode=TwoWay}"
                  HorizontalAlignment="Left" 
                  Visibility="{Binding ZielformatVisibility}"
                  Margin="50,94,0,0" 
                  VerticalAlignment="Top" 
                  Width="100" 
                  Grid.Column="1" 
                  Height="30" />
        <Label Content="Zielformat auswählen" 
               HorizontalContentAlignment="Center"
               Visibility="{Binding ZielformatVisibility}"
               Margin="35,68,35,0" 
               VerticalAlignment="Top" 
               Grid.Column="1"/>
        <Button Content="Konvertieren" 
                Command="{Binding ConvertCommand}"
                Visibility="{Binding ButtonVisibility}"
                HorizontalAlignment="Left" 
                Height="30" 
                Margin="50,183,0,0" 
                VerticalAlignment="Top" 
                Width="100" 
                Grid.Column="1"/>

        <ListView  
            ItemsSource="{Binding FileNames}"
                   AllowDrop="True"
                  Drop="ListBox_Drop"
                   Focusable="False"
                  HorizontalAlignment="Left"
                  Height="203" 
                  Margin="10,10,0,0" 
                  VerticalAlignment="Top" 
                  Width="177">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="IsHitTestVisible" Value="false"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <Label Content="© 2020 Lukas Hecke"
               FontSize="8"
               HorizontalAlignment="Left" 
               Height="19" 
               Margin="104,242,0,0" 
               VerticalAlignment="Top" 
               Width="83" 
               Grid.Column="1"/>
        
    </Grid>
</Window>
